<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jimmy.logfun.mapper.ArticleMapper">
    <resultMap type="com.jimmy.logfun.domain.Article" id="Article">
        <id property="id" column="id" jdbcType="DECIMAL"/>
        <result property="createTime" column="createTime" jdbcType="VARCHAR"/>
        <result property="updateTime" column="updateTime" jdbcType="VARCHAR"/>
        <result property="author" column="author" jdbcType="VARCHAR"/>
        <result property="title" column="title" jdbcType="VARCHAR"/>
        <result property="content" column="content" jdbcType="CLOB"/>
    </resultMap>
     <sql id="Base_Column_List">
     	id, createTime, updateTime, title, content, author
     </sql>
	<select id="get" parameterType="long" resultType="Article"> 
		select <include refid="Base_Column_List"/> from t_article where id = #{id} 
	</select>
	
	<insert id="save" parameterType="Article" keyColumn="id"
		keyProperty="id" useGeneratedKeys="true"> 
		insert into t_article(createTime, updateTime, title, content, author) values(#{createTime}, #{updateTime}, #{title}, #{content}, #{author}) 
	</insert>
	
	<select id="find" resultType="Article">
		select <include refid="Base_Column_List"/> from t_article order by updateTime desc
	</select>
</mapper>
