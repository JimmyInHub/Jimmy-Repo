<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jimmy.logfun.mapper.ArticleMapper">
    <resultMap type="com.jimmy.logfun.mapper.ArticleMapper" id="article">
        <id property="id" column="id"/>
        <result property="createTime" column="create_time"/>
        <result property="updateTime" column="update_time"/>
        <result property="title" column="title"/>
        <result property="content" column="content"/>
    </resultMap>
	<select id="get" parameterType="long" resultType="Article"> 
		select * from t_article where id = #{id} 
	</select>
	
	<insert id="save" parameterType="Article" keyColumn="id"
		keyProperty="id" useGeneratedKeys="true"> 
		insert into t_article(create_time,update_time,title,content,author) values(#{createTime},#{updateTime},#{title},#{content},#{author}) 
	</insert>
	
	<select id="find" resultType="Article">
		select * from t_article order by id
	</select>
</mapper>
